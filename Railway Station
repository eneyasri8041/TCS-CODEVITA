
import java.util.*;
class Main
{
static int dp[] = new int[100000];
static int findWays(int x)
{
	if (x < 0)
	return 0;
	if (x == 0)
	return 1;
	if (x == 1)
	return 2;
	if (x == 2)
	return 4;
	if (dp[x] != -1)
	return dp[x];
	int count = findWays(x - 1);
	count += findWays(x - 2);
	count += findWays(x - 3);
	dp[x] = count;
	return dp[x];
}
public static void main(String[] args)
{
	int n = 4;
	Arrays.fill(dp, -1);
	System.out.print(findWays(n));
}
}


